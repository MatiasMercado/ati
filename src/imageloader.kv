#:kivy 1.1.0
#:import win kivy.core.window

Root:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: '../resources/background.jpg'
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'x': 0, 'y':0.95}
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()
            Button:
                text: 'Save'
                #on_release: root.show_save()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<Picture>:
    orientation: 'vertical'
    BoxLayout:
        #orientation: 'vertical'
        pos_hint: {'x': 0, 'y':0.88}
        BoxLayout:
            size_hint_y: None
            height: 30
            Label:
                text: 'X'
            Label:
                text: str(root.X)
            Label:
                text: 'Y'
            Label:
                text: str(root.Y)
            Label:
                text: 'Value'
            Label:
                text: str(root.value)
    BoxLayout:
        canvas:
            Rectangle:
                size: root.textureSize
                #size: (512, 512)
                pos: root.pos
                texture: root.texture
                #on_touch_down: print('You Just Touched: {}'.format(args[1].pos))
